      <button class="lux-button" id="popover-1b" data-target="#popover-in-html">Popover</button>
      <!-- Put the following code anywere in the DOM, e.g. at the end of the DOM -->
      <section class="lux-popover" id="popover-in-html" aria-modal="true" role="dialog" aria-label="Popover title">
        <header class="lux-popover__header">
          <h2 class="lux-popover__title">Popover title</h2>
