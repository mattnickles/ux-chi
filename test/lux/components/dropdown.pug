---
title: Dropdown
---

- var dropdownStates = ["", "-active"];
- var textCombinations = [{"t_text": "Click me", "d_text": "Element"}, {"t_text": "Long trigger text, click me", "d_text": "Element"}, {"t_text": "Click me", "d_text": "Long text dropdown element"}];
- var menuItemStates = [{"title":"Normal", "class": ""}, {"title":"Active", "class": "-active"}, {"title":"Disabled", "class": "-disabled"}, {"title":"Hover", "class": "-hover"}];

each menuItemState in menuItemStates
  div(class=`test-basicDropdown${menuItemState.class}`)
    span.-text--h2=menuItemState.title
    .-d--flex
      each textCombination in textCombinations
        each dropdownState in dropdownStates
          .lux-dropdown(style="margin-bottom: 8em")
            button(class=`lux-button lux-dropdown__trigger ${dropdownState}`)=textCombination.t_text
            div(class=`lux-dropdown__menu ${dropdownState}`)
              each i in [1, 2, 3]
                a(class=`lux-dropdown__menu-item ${menuItemState.class}`, href='#')=textCombination.d_text + " " + i

div(class=`test-dropdown-list`)
  span.-text--h2 List
  .-d--flex
    div(class=`lux-dropdown__menu -list -active`)
      a.lux-dropdown__menu-item(href='#')
        p.lux-dropdown__menu-item_title Normal element
        p.lux-dropdown__menu-item_text Normal element
      a.lux-dropdown__menu-item.-active(href='#')
        p.lux-dropdown__menu-item_title Normal element
        p.lux-dropdown__menu-item_text Active element
      a.lux-dropdown__menu-item.-disabled(href='#')
        p.lux-dropdown__menu-item_title Normal element
        p.lux-dropdown__menu-item_text Disabled element
      a.lux-dropdown__menu-item.-hover(href='#')
        p.lux-dropdown__menu-item_title Normal element
        p.lux-dropdown__menu-item_text Hovered item

div(class=`test-dropdown-divider`)
  span.-text--h2 Divider
  .-d--flex
    div(class=`lux-dropdown__menu -active`)
      each i in [1, 2]
        a(class=`lux-dropdown__menu-item`, href='#')="Text " + i
      .lux-divider
      each i in [3, 4]
        a(class=`lux-dropdown__menu-item`, href='#')="Text " + i

div(class=`test-dropdown-icons`)
  span.-text--h2 Icons
  .-d--flex
    .lux-dropdown__menu.-active
      a.lux-dropdown__menu-item(href='#')
        .lux-icon
          svg
            use(xlink:href='#icon-file-outline')
        = "New"
      a.lux-dropdown__menu-item.-disabled(href='http://www.centurylink.com')
        .lux-icon
          svg
            use(xlink:href='#icon-arrow-to-bottom')
        = "Save"
      .lux-divider
      a.lux-dropdown__menu-item(href='#')
        .lux-icon
          svg
            use(xlink:href='#icon-mail')
        = "Send"
      a.lux-dropdown__menu-item.-active(href='#')
        .lux-icon
          svg
            use(xlink:href='#icon-cart')
        = "Buy"
      a.lux-dropdown__menu-item.-hover(href='#')
        .lux-icon
          svg
            use(xlink:href='#icon-users')
        = "Share"
      .lux-divider
      a.lux-dropdown__menu-item(href='#')
        .lux-icon
          svg
            use(xlink:href='#icon-logout')
        = "Logout"

div(class=`test-dropdown-searchBox`)
  span.-text--h2 Search box
  .-d--flex
    .lux-dropdown__menu.-active
      .lux-input__wrapper.-icon--left.lux-dropdown__menu-item
        input(type="text", class="lux-input", placeholder="Search")
        .lux-icon
          svg
            use(xlink:href='#icon-search')
      a.lux-dropdown__menu-item(href='#') Element 1
      a.lux-dropdown__menu-item(href='#') Element 2

- var inputStates = ["", "disabled", "checked"]
div(class=`test-dropdown-checkbox`)
  span.-text--h2 checkbox
  .lux-dropdown__menu.-active
    each inputState in inputStates
      .lux-dropdown__menu-item
        .lux-checkbox
          input(type="checkbox", class="lux-checkbox__input", checked=(inputState==="checked"), disabled=(inputState==="disabled"))
          label.lux-checkbox__label(for=`checkbox${inputState}`)="Element checkbox " + inputState

div(class=`test-dropdown-checkbox-icon`)
  span.-text--h2 checkbox with icons
  .lux-dropdown__menu.-active
    each inputState in inputStates
      .lux-dropdown__menu-item
        .lux-checkbox
          input(type="checkbox", class="lux-checkbox__input", checked=(inputState==="checked"), disabled=(inputState==="disabled"))
          label.lux-checkbox__label(for=`checkbox${inputState}`)
            .lux-icon
              svg
                use(xlink:href='#icon-logo-centurylink')
            ="Element checkbox " + inputState

