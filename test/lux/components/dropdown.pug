div(class=`test-dropdown-text`)
  span.-text--h2 Plain text
  .-d--flex
    .lux-dropdown__menu.-active
      span.lux-dropdown__menu-item Text 1
      span.lux-dropdown__menu-item Text 2
      span.lux-dropdown__menu-item Text 3
      span.lux-dropdown__menu-item Text 4

div(class=`test-dropdown-range`)
  span.-text--h2 Range
  .-d--flex
    .lux-dropdown__menu.-active
      .lux-dropdown__menu-item
        label.-text.-mr--2 200GB
        input.lux-input(type="range")
        label.-text.-ml--2 5TB
      .lux-divider
      span.lux-dropdown__menu-item Select range
      .lux-dropdown__menu-item
        input.lux-input(type="range")

div(class=`test-dropdown-toggle`)
  span.-text--h2 Toggle input
  .-d--flex
    .lux-dropdown__menu.-active
      .lux-dropdown__menu-item.-h--auto
        .lux-form__item
          label.lux-switch(for="toggle1")
            input(type="checkbox", class="lux-switch__input", id="toggle1")
            span(class="lux-switch__content")
              span.lux-switch__thumb
            span.lux-switch__label Label
      .lux-dropdown__menu-item.-h--auto
        .lux-form__item
          label.lux-switch(for="toggle2")
            input(type="checkbox", class="lux-switch__input", id="toggle2", checked)
            span(class="lux-switch__content")
              span.lux-switch__thumb
            span.lux-switch__label Label
      .lux-dropdown__menu-item.-h--auto
        .lux-form__item
          label.lux-switch(for="toggle3")
            input(type="checkbox", class="lux-switch__input", id="toggle3", disabled)
            span(class="lux-switch__content")
              span.lux-switch__thumb
            span.lux-switch__label Label


div(class=`test-dropdown-ellipsis-helper`)
  span.-text--h2 Ellipsis helper
  .-d--flex
    .lux-dropdown__menu.-active(style="width:10rem")
      a.lux-dropdown__menu-item(href='#') Element 1
      a.lux-dropdown__menu-item(href='#') Element 2
      a.lux-dropdown__menu-item(href='#')
        .-flex--ellipsis Longer text element 3
      a.lux-dropdown__menu-item(href='#') Element 4

div(class=`test-dropdown-higher-helper`)
  span.-text--h2 Higher menu items helper
  .-d--flex
    .lux-dropdown__menu.-active(style="width:10rem")
      a.lux-dropdown__menu-item(href="#") Link 1
      .lux-dropdown__menu-item.-h--auto.-py--1 Lorem ipsum dolor sit amet, consectetur adipisicing elit.
      a.lux-dropdown__menu-item(href="#") Link 2

- var triggerSizes = ["-lg", "", "-sm"];
- var triggerStates = dropdownStates;
- var dropdownPositions = ["", "default", "initial", "top", "right", "bottom", "left", "top-start", "top-end", "right-start", "right-end", "bottom-start", "bottom-end", "left-start", "left-end"];

each triggerSize in triggerSizes
  div(class=`test-dropdown-button${triggerSize}`)
    span.-text--h2=`Button${triggerSize}`
    each triggerState in triggerStates
      span.-text--h3=`State ${triggerState}`
      each position in dropdownPositions
        .-d--flex
          button(class=`lux-button lux-dropdown__trigger ${triggerSize} ${triggerState}`, data-position=position)=`Button ${triggerState} ${position}`
