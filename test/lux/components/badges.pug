---
title: Badges

---
each type in ['solid', 'outline', 'flat']
  div(class=`test-${type}`)
    span.-text--h2= `Badge / ${type}`
    div
      each style in ['base', 'primary', 'secondary', 'success', 'warning', 'danger', 'dark', 'muted', 'light']
        div(
        class="lux-badge -mr--1"
        class={
          [`-${type}`]: type !== 'solid',
          [`-${style}`]: style !== 'base'
        }
        )
          span= style
        div(
        class="lux-badge -mr--1"
        class={
          [`-${type}`]: type !== 'solid',
          [`-${style}`]: style !== 'base'
        }
        )
          .lux-badge__content
            .lux-icon
              svg
                use(xlink:href='#icon-atom')
            span= style

h2 Badge Icons
.test-badge-icons
  .example.-mb--1
    each size in ['xs', 'sm', 'default']
      .p.-text--bold= size
        .lux-badge(class=`-${size} -m--1`)
          .lux-badge__content
            .lux-icon
              svg
                use(xlink:href='#icon-atom')
            span Badge
        .lux-badge(class=`-${size} -m--1`)
          .lux-badge__content
            span Badge
            .lux-icon
              svg
                use(xlink:href='#icon-atom')
        .lux-badge(class=`-${size} -m--1`)
          .lux-badge__content
            .lux-icon
              svg
                use(xlink:href='#icon-atom')
            span Badge
            .lux-icon
              svg
                use(xlink:href='#icon-atom')

h2 Text Transform
.test-text-transform
  .example.-mb--1
    .p.-text--bold
      | uppercase
      .lux-badge.-text--uppercase.-m--1
        span Badge
    .p.-text--bold
      | lowercase
      .lux-badge.-text--lowercase.-m--1
        span Badge
    .p.-text--bold
      | capitalized
      .lux-badge.-text--capitalized.-m--1
        span Badge