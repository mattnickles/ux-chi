---
title: Checkbox
---

.test-states
  each state, index in ['default', 'hover', 'focus', 'checked', 'disabled']
    h5= `Checkbox / ${state}`
    .lux-form__item.-row.-mb--1
      .lux-checkbox
        input.lux-checkbox__input(
          type="checkbox"
          id=`checkbox-${index}`
          class={
            [`-${state}`]: state == 'focus'
          }
          checked=state=='checked' ? 'checked' : false
          disabled=state=='disabled' ? 'disabled' : false
        )
        label.lux-checkbox__label(for=`checkbox-${index}`) Checkbox

h2 Checkbox List
.test-states
  each state, index in ['default', 'hover', 'focus', 'checked', 'disabled']
    h5= `Checkbox / ${state}`
    ul.lux-form__item.-list(style="max-width:20rem")
      each element in [1, 2, 3, 4, 5]
        li.lux-form__item.-row
          .lux-checkbox
            input.lux-checkbox__input(
            type="checkbox"
            id=`checkbox--${element}`
            class={
              [`-${state}`]: state == 'focus'
            }
            checked=state == 'checked' ? 'checked' : false
            disabled=state == 'disabled' ? 'disabled' : false
            )
            label.lux-checkbox__label(for=`checkbox--${element}`)= `Checkbox-${element}`
