---
title: Alert Banners
---

each size in ['default', 'sm', 'lg']
  h4 Default / #{size}
  div(class=`test-banner-${size} -w--100`)
    each val, type in {base: 'icon-circle-info', success:'icon-circle-check', danger:'icon-circle-warning', warning:'icon-warning', info:'icon-circle-info', muted:'icon-circle-info'}
      .lux-alert.-m--2.-banner(class=`-${type} ${size === 'default' ? '' : '-' + size}`)
        div(class=`lux-alert__icon lux-icon -icon--${type}`)
          svg
            use(xlink:href=`#${val}`)
        .lux-alert__content
          p.lux-alert__text=`This is ${type === 'info' ? 'an' : 'a'} ${type} alert`

  h4 Centered / #{size}
  div(class=`test-banner-center-${size} -w--100`)
    each val, type in {base: 'icon-circle-info', success:'icon-circle-check', danger:'icon-circle-warning', warning:'icon-warning', info:'icon-circle-info', muted:'icon-circle-info'}
      .lux-alert.-m--2.-banner.-center(class=`-${type} ${size === 'default' ? '' : '-' + size}`)
        div(class=`lux-alert__icon lux-icon -icon--${type}`)
          svg
            use(xlink:href=`#${val}`)
        .lux-alert__content
          p.lux-alert__text= `This is ${type === 'info' ? 'an' : 'a'} centered ${type} alert`

  h4 Closable / #{size}
  div(class=`test-banner-dismissible-${size} -w--100`)
    each val, type in {base: 'icon-circle-info', success:'icon-circle-check', danger:'icon-circle-warning', warning:'icon-warning', info:'icon-circle-info', muted:'icon-circle-info'}
      .lux-alert.-banner.-m--2.-close.-m--2(class=`-${type} ${size === 'default' ? '' : '-' + size}`)
        div(class=`lux-alert__icon lux-icon -icon--${type}`)
          svg
            use(xlink:href=`#${val}`)
        .lux-alert__content
          p.lux-alert__text= `This is a dismissible ${type} alert`
        button(class='lux-alert__close-button lux-button -icon -close', aria-label='Close')
          .lux-button__content
            .lux-icon
              svg
                use(xlink:href='#icon-x')

  h4 Titled / #{size}
  div(class=`test-banner-titled-${size} -w--100`)
    each val, type in {base: 'icon-circle-info', success:'icon-circle-check', danger:'icon-circle-warning', warning:'icon-warning', info:'icon-circle-info', muted:'icon-circle-info'}
      .lux-alert.-m--2.-banner(class=`-${type} ${size === 'default' ? '' : '-' + size}`)
        div(class=`lux-alert__icon lux-icon -icon--${type}`)
          svg
            use(xlink:href=`#${val}`)
        .lux-alert__content
          p.lux-alert__title= `${type}`
          p.lux-alert__text=`This is a titled ${type} alert`

  h4 Actionable / #{size}
  div(class=`test-banner-actionable-${size} -w--100`)
    each val, type in {base: 'icon-circle-info', success:'icon-circle-check', danger:'icon-circle-warning', warning:'icon-warning', info:'icon-circle-info', muted:'icon-circle-info'}
      .lux-alert.-m--2.-banner(class=`-${type} ${size === 'default' ? '' : '-' + size}`)
        div(class=`lux-alert__icon lux-icon -icon--${type}`)
          svg
            use(xlink:href=`#${val}`)
        .lux-alert__content
          p.lux-alert__title #{type}
          p.lux-alert__text This is a #{size} #{type} actionable alert
          div.lux-alert__actions
            button.lux-button(class=`-${size}`) Secondary action
            button.lux-button.-primary(class=`-${size}`) Primary action
