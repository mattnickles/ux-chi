---
title: Drawer
---
- var sides = ['top', 'right', 'bottom', 'left'];
- var versions = [{"title": "no-backdrop", "classes": "", "testClass": "test-"}, {"title": "backdrop", "classes": "lux-backdrop", "testClass": "test-backdrop-"}, {"title": "inverse backdrop", "classes": "lux-backdrop -inverse", "testClass": "test-backdrop-inverse-"} ];

each side in sides
  each version in versions

    div(class=`${version.testClass}${side} -mb--3`)
      div(style='width: 320px')
        .-text--h2= `Drawer / ${version.title} / ${side}`
        div(class=`${version.classes}` style="position:relative;height:20rem")
          .lux-backdrop__wrapper
            div(class=`lux-drawer -${side} -active`, style='position:absolute;')
              button(class='lux-button -icon -close', aria-label='Close')
                .lux-button__content
                  i.lux-icon.icon-x
              .lux-drawer__content
                .-px--2.-text Drawer content here

    div(class=`${version.testClass}${side}-headed -mb--3`)
      div(style='width: 320px')
        .-text--h2= `Drawer / with head / ${version.title} / ${side}`
        div(class=`${version.classes}` style="position:relative;height:20rem")
          .lux-backdrop__wrapper
            div(class=`lux-drawer -${side} -active`, style='position:absolute;')
              .lux-drawer__header
                button(class='lux-button -icon -close', aria-label='Close')
                  .lux-button__content
                    i.lux-icon.icon-x
              .lux-drawer__content
                .-px--2.-text Drawer content here

    div(class=`${version.testClass}${side}-with-title -mb--3`)
      div(style='width: 320px')
        .-text--h2= `Drawer / with title / ${version.title} / ${side}`
        div(class=`${version.classes}` style="position:relative;height:20rem")
          .lux-backdrop__wrapper
            div(class=`lux-drawer -${side} -active`, style='position:absolute;')
              .lux-drawer__header
                span.lux-drawer__title Drawer title here
                button(class='lux-button -icon -close', aria-label='Close')
                  .lux-button__content
                    i.lux-icon.icon-x
              .lux-drawer__content
                .-px--2.-text Drawer content here

  div(class=`test-${side}-portal -mb--3`)
    div(style='width: 20rem')
      .-text--h2= `Drawer / Portal / ${side}`
      .-position--relative(style="height:20rem")
        .lux-drawer.-portal.-active.-position--absolute(class=`-${side}`)
          .lux-drawer__header
            span.lux-drawer__title
              | Drawer title here
            button.lux-button.-icon.-close(aria-label='Close')
              .lux-button__content
                i.lux-icon.icon-x
          .lux-drawer__content
            .-px--2.-text Drawer content here

div(class=`test-non-closable -mb--3 example -mb--3`)
  div(style='width: 320px')
    .-text--h2= `Drawer / Non closable`
    div(style="position:relative;height:20rem")
      div(class=`lux-drawer -left -active`, style='position:absolute;')
        .lux-drawer__content
          .-px--2.-text Drawer content here
