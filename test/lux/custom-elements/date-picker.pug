---
title: Date picker
---
script(type='module' src='../../js/ce/ux-lux-ce/ux-lux-ce.esm.js')
script(nomodule='' src='../../js/ce/ux-lux-ce/ux-lux-ce.js')

- const day = 1;
- const weekS = ['S', 'M', 'T', 'W', 'T', 'F', 'S'];
- const today = 19;
- const active = 23;
- const date1 = '11/23/2018';
- const dateMin = '11/19/2018';
- const date2 = '01/24/2019';

.test-active(data-cy="test-active")
  span.-text--h2 Active
  .-position--relative
    lux-date(value=date1)

.test-combined(data-cy="test-combined")
  span.-text--h2 Combined
  .-position--relative
    lux-date(value=date1, min=dateMin)

.test-input-combined-icon(data-cy="test-input-combined")
  span.-text--h2 Input Popover Combined w/ icon
  .-position--relative(style="height: 18rem; width:14rem;")
    lux-date-picker(value=date2, min=date2, active)

.test-disabled(data-cy="test-disabled")
  span.-text--h2 Disabled date picker
  .-position--relative(style="width:14rem;")
    lux-date-picker(disabled)
