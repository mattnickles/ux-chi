---
title: Spinner
---
script(type='module' src='../../js/ce/ux-lux-ce/ux-lux-ce.esm.js')
script(nomodule='' src='../../js/ce/ux-lux-ce/ux-lux-ce.js')

h3 Backdrop

h4 Base
.test-backdrop-base(style="height:31rem;width:100%")
  .example.-mb--3(style="height:30rem;width:100%")
    .-p--6(style="position:relative;height:100%;")
      lux-spinner(color='light', backdrop, data-cy='base-backdrop-spinner')

h4 Inverse Backdrop
.test-backdrop-inverse(style="height:31rem;width:100%")
  .example.-mb--3(style="height:30rem;width:100%")
    .-p--6(style="position:relative;height:100%;")
      lux-spinner(color='primary', backdrop='inverse', data-cy='inverse-backdrop-spinner')

h3 Contextual

h4 Spinner Buttons
.test-buttons
  .example.-mb--3
    .-p--3
      lux-button.-mr--3
        span Button
        lux-spinner(color='muted')
      lux-button.-mr--3(size='sm')
        span Small
        lux-spinner(color='muted', size='xs')
      lux-button.-mr--3(size='lg')
        span Large
        lux-spinner(color='muted', size='sm--2')

// TODO: Change after we have input ce
h4 Spinner Text Input
.test-text-input
  .example.-mb--3
    .-p--3
      .lux-input__wrapper.-pb--2(style="max-width:20rem")
        input(type="text", class="lux-input", placeholder="Placeholder", value="Sample Text")
        svg(class='lux-spinner -icon--muted',viewBox='0 0 66 66')
          title Loading
          circle(class='path',cx='33',cy='33',r='30',fill='none',stroke-width='6')
      .lux-input__wrapper.-pb--2(style="max-width:20rem")
        input(type="text", class="lux-input -sm", placeholder="Placeholder", value="Sample Text")
        svg(class='lux-spinner -icon--muted -xs',viewBox='0 0 66 66')
          title Loading
          circle(class='path',cx='33',cy='33',r='30',fill='none',stroke-width='6')
      .lux-input__wrapper.-pb--2(style="max-width:20rem")
        input(type="text", class="lux-input -lg", placeholder="Placeholder", value="Sample Text")
        svg(class='lux-spinner -icon--muted -sm--2',viewBox='0 0 66 66')
          title Loading
          circle(class='path',cx='33',cy='33',r='30',fill='none',stroke-width='6')

h4 Sizes
.test-sizes
  .lux-grid
    each size in ['xs', 'sm', 'sm--2', 'sm--3', 'md', 'lg', 'xl', 'xxl']
      .lux-col.-w--1.-o--1.-middle
        h4= `-${size}`
      .lux-col.-w--2.-middle
        lux-spinner(color='muted', size=size, data-cy=`spinner-${size}`)

h4 Colors
.test-colors
  .lux-grid.-align-items--center
    each type in ['primary', 'success', 'warning', 'danger', 'muted', 'secondary', 'light']
      div.-p--2
        lux-spinner(color=type, size='lg', data-cy=`spinner-${type}`)
        p.-text(class=`-icon--${type}`)
          = `-icon--${type}`

style.
  svg {
    animation: none !important;
  }
  .path {
    animation: none !important;
    stroke-dasharray: 0, 0 !important;
  }
