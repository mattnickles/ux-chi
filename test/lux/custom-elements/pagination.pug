h4 Sizes
.test-sizes.-w--100
  .example
    .lux-grid.-no-gutter
      .lux-col.-w--12.-w-md--6
        .-p--3
          each size in ['sm', 'md', 'lg', 'xl']
            p.-text--bold=`-${size}`
            lux-pagination(pages="5" current-page="3" size=size)
      .lux-col.-w--12.-w-md--6
        .-p--3.-bg--black
          each size in ['sm', 'md', 'lg', 'xl']
            p.-text--bold.-text--white=`-${size}`
            lux-pagination(pages="5" current-page="3" size=size inverse)
